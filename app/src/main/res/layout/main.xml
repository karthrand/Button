<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:gravity="center_horizontal">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:gravity="center_horizontal"
		android:text="未点击按钮"
		android:id="@+id/mainTextView1"
		android:layout_marginBottom="10dp"/>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Button1"
		android:layout_below="@id/mainTextView1"
		android:id="@+id/mainButton1"
		android:layout_marginBottom="10dp"/>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Button2"
		android:layout_below="@id/mainButton1"
		android:id="@+id/mainButton2"
		android:layout_marginBottom="10dp"/>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Button3"
		android:layout_below="@id/mainButton2"
		android:id="@+id/mainButton3"
		android:layout_marginBottom="10dp"/>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Button4"
		android:layout_below="@id/mainButton3"
		android:onClick="Click"
		android:id="@+id/mainButton4"/>

</RelativeLayout>

